/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Iosevka Nerd Font 10";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					0px;
    transparency:                   "real";
    border-radius:          0px;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    background-color:       @transparent;
    text-color:				@ac;
}

